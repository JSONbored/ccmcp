{
  "name": "@gsong/ccmcp",
  "version": "0.1.0",
  "description": "Claude Code MCP Selector - Intelligently discover, validate, and select MCP server configurations for Claude Code",
  "license": "MIT",
  "author": "George Song",
  "repository": {
    "type": "git",
    "url": "https://github.com/gsong/ccmcp.git"
  },
  "homepage": "https://github.com/gsong/ccmcp",
  "keywords": [
    "claude",
    "mcp",
    "cli",
    "selector",
    "configuration"
  ],
  "bin": {
    "ccmcp": "./dist/index.js"
  },
  "files": [
    "dist/",
    "README.md",
    "LICENSE"
  ],
  "engines": {
    "node": ">=18.0.0"
  },
  "type": "module",
  "scripts": {
    "build": "biome check src && tsc",
    "dev": "tsx src/index.ts",
    "clean": "rm -rf dist",
    "lint": "biome check src",
    "lint:fix": "biome check --write src",
    "format": "biome format --write src",
    "publish:npm": "pnpm run build && pnpm publish --access public",
    "publish:dry-run": "pnpm run build && pnpm publish --dry-run --access public"
  },
  "packageManager": "pnpm@10.17.0",
  "devDependencies": {
    "@biomejs/biome": "^2.2.4",
    "@types/node": "^24.5.2",
    "tsx": "^4.20.5",
    "typescript": "^5.9.2"
  }
}
